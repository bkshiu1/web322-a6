<%- include('partials/header', { title: "User History", page: "/userHistory" }) %>

<section class="min-h-screen bg-base-200 px-4 py-10">
  <div class="max-w-2xl mx-auto">
    <div class="bg-base-100 p-8 rounded shadow">
      <h1 class="text-3xl font-bold mb-6">User History</h1>

      <p><strong>User:</strong> <%= user?.userName %></p>
      <p><strong>Email:</strong> <%= user?.email %></p>

      <h2 class="text-xl font-semibold mt-6 mb-2">Login History:</h2>
      <% if (user?.loginHistory?.length > 0) { %>
        <ul class="list-disc ml-6">
          <% user.loginHistory.forEach(function(entry) { %>
            <li class="mb-2">
              <strong>Date:</strong> <%= entry.dateTime %><br />
              <strong>Browser:</strong> <%= entry.userAgent %>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No login history found.</p>
      <% } %>
    </div>
  </div>
</section>
